extends ../layout

block content
  .header
    a(href='/'): img.logo(src='https://brandfolder.com/galvanize/assets/4q8xd3ky/galvanize_galvanize-logo-text-logo_logo.png')
    h1 Galvanize Reads
  .pageLinks
    a(href='/books'): img(src='https://cdn4.iconfinder.com/data/icons/miu/24/editor-books-library-collection-glyph-32.png')
    a(href='/authors'): img(src='https://cdn3.iconfinder.com/data/icons/streamline-icon-set-free-pack/48/Streamline-23-32.png')
    br
    br
    br
    br
    br
  if books
    .booksTableLeft 
      img.bookCover(src=''+books.cover+'')
    .booksTableRight
      h4= books.title
      for author in authors
        for credit in credits
          if author.id === credit.authorID && books.id === credit.bookID
            p: a(href='/authors/'+author.id+'')= author.first + ' ' + author.last
      p= books.genre
      p= books.description
      form(action='/books/'+books.id+'/delete' method='post')
        button(type='submit') Delete '#{books.title}'?
