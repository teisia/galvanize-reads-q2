extends ../layout

block content
  br
  br
  br
  .newBookLink
    a(href='/books/new') New Book
    br
    br
  .booksTable
    for book in books
      .booksTableLeft 
        img.bookCover(src=''+book.cover+'')
      .booksTableRight
        h4= book.title
        for author in authors 
          for credit in credits
            if author.id === credit.authorID && book.id === credit.bookID
              p= author.first + ' ' + author.last
        p= book.genre
        p= book.description
                
          
